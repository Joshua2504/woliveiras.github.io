.contact-icons
	padding-top: 10px
	
	a
		text-decoration: none
	
	.ico
		display: inline-block
		width: 50px
		height: 50px
		margin: 10px
		opacity: 0.9
	
		&:hover
			opacity: 1
		
	.facebook
		background: url('../../../public/contact-icons/facebook.svg') no-repeat
		background-size: 100%
	.twitter
		background: url('../../../public/contact-icons/twitter.svg') no-repeat
		background-size: 100%
	.linkedin
		background: url('../../../public/contact-icons/linkedin.svg') no-repeat
		background-size: 100%
	.github
		background: url('../../../public/contact-icons/github.svg') no-repeat
		background-size: 100%